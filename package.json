{
  "name": "spec2cloud-toolkit",
  "displayName": "Spec2Cloud on Azure",
  "description": "Spec-Driven Development with GitHub Copilot and Azure",
  "version": "0.3.0",
  "publisher": "AlexVieiraGBB",
  "repository": {
    "type": "git",
    "url": "https://github.com/EmeaAppGbb/spec2cloud-toolkit.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:spec2cloud.gallery"
  ],
  "icon": "resources/Spec2Cloud-white.png",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Spec2Cloud on Azure",
      "properties": {
        "spec2cloud.templatesRepo": {
          "type": "string",
          "default": "https://github.com/Azure-Samples/Spec2Cloud",
          "description": "GitHub repository URL containing the templates"
        },
        "spec2cloud.resources": {
          "type": "array",
          "default": [
            {
              "name": "Spec2Cloud Documentation",
              "description": "Official documentation for Spec2Cloud",
              "url": "https://github.com/Azure-Samples/Spec2Cloud",
              "icon": "github"
            },
            {
              "name": "Azure Documentation",
              "description": "Microsoft Azure official documentation",
              "url": "https://learn.microsoft.com/azure",
              "icon": "Azure"
            }
          ],
          "description": "List of resource links to display"
        }
      }
    },
    "views": {
      "spec2cloud": [
        {
          "type": "webview",
          "id": "spec2cloud.gallery",
          "name": "Gallery"
        },
        {
          "id": "spec2cloud.templates",
          "name": "Templates"
        },
        {
          "id": "spec2cloud.resources",
          "name": "Resources"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "spec2cloud",
          "title": "Spec2Cloud on Azure",
          "icon": "resources/Spec2Cloud-white.png"
        }
      ]
    },
    "commands": [
      {
        "command": "spec2cloud.openGallery",
        "title": "Open Template Gallery",
        "category": "Spec2Cloud"
      },
      {
        "command": "spec2cloud.refreshTemplates",
        "title": "Refresh Templates",
        "category": "Spec2Cloud",
        "icon": "$(refresh)"
      },
      {
        "command": "spec2cloud.sortTemplatesByName",
        "title": "Sort by Name",
        "category": "Spec2Cloud",
        "icon": "$(symbol-text)"
      },
      {
        "command": "spec2cloud.sortTemplatesByDate",
        "title": "Sort by Date",
        "category": "Spec2Cloud",
        "icon": "$(calendar)"
      },
      {
        "command": "spec2cloud.viewTemplateOnGitHub",
        "title": "View on GitHub",
        "category": "Spec2Cloud",
        "icon": "$(github)"
      },
      {
        "command": "spec2cloud.viewTemplateInGallery",
        "title": "View Template",
        "category": "Spec2Cloud",
        "icon": "$(eye)"
      },
      {
        "command": "spec2cloud.useTemplate",
        "title": "Use Template",
        "category": "Spec2Cloud",
        "icon": "$(cloud-download)"
      },
      {
        "command": "spec2cloud.openResource",
        "title": "Open Resource",
        "category": "Spec2Cloud"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "spec2cloud.refreshTemplates",
          "when": "view == spec2cloud.templates",
          "group": "navigation@1"
        },
        {
          "command": "spec2cloud.sortTemplatesByName",
          "when": "view == spec2cloud.templates",
          "group": "navigation@2"
        },
        {
          "command": "spec2cloud.sortTemplatesByDate",
          "when": "view == spec2cloud.templates",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "spec2cloud.viewTemplateOnGitHub",
          "when": "view == spec2cloud.templates && viewItem == template",
          "group": "inline@1"
        },
        {
          "command": "spec2cloud.viewTemplateInGallery",
          "when": "view == spec2cloud.templates && viewItem == template",
          "group": "inline@2"
        },
        {
          "command": "spec2cloud.useTemplate",
          "when": "view == spec2cloud.templates && viewItem == template",
          "group": "inline@3"
        },
        {
          "command": "spec2cloud.viewTemplateOnGitHub",
          "when": "view == spec2cloud.templates && viewItem == template",
          "group": "1_actions@1"
        },
        {
          "command": "spec2cloud.viewTemplateInGallery",
          "when": "view == spec2cloud.templates && viewItem == template",
          "group": "1_actions@2"
        },
        {
          "command": "spec2cloud.useTemplate",
          "when": "view == spec2cloud.templates && viewItem == template",
          "group": "1_actions@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
