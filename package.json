{
  "name": "spec2cloud-toolkit",
  "displayName": "Spec2Cloud on Azure",
  "description": "Spec-Driven Development with GitHub Copilot and Azure",
  "version": "0.6.0",
  "publisher": "ms-gbb-tools",
	"license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EmeaAppGbb/spec2cloud-toolkit.git"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "resources/Spec2Cloud-blue.png",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Spec2Cloud on Azure",
      "properties": {
        "spec2cloud.templatesRepo": {
          "type": "string",
          "default": "https://github.com/Azure-Samples/Spec2Cloud",
          "description": "GitHub repository URL containing the templates"
        },
        "spec2cloud.resources": {
          "type": "array",
          "default": [
            {
              "name": "Spec2Cloud Documentation",
              "description": "Official documentation for Spec2Cloud",
              "url": "https://github.com/Azure-Samples/Spec2Cloud",
              "icon": "github"
            },
            {
              "name": "Azure Documentation",
              "description": "Microsoft Azure official documentation",
              "url": "https://learn.microsoft.com/azure",
              "icon": "Azure"
            }
          ],
          "description": "List of resource links to display"
        }
      }
    },
    "views": {
      "spec2cloud": [
        {
          "type": "webview",
          "id": "spec2cloud.gallery",
          "name": "Gallery",
          "icon": "$(gallery)"
        },
        {
          "id": "spec2cloud.templates",
          "name": "Templates",
          "icon": "$(files)"
        },
        {
          "id": "spec2cloud.resources",
          "name": "Resources",
          "icon": "$(book)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "spec2cloud",
          "title": "Spec2Cloud on Azure",
          "icon": "resources/Spec2Cloud-white.png"
        }
      ]
    },
    "languageModelTools": [
      {
        "name": "spec2cloud_search_templates",
        "displayName": "Search Spec2Cloud Templates",
        "modelDescription": "Search and filter Spec2Cloud templates. Use this when users want to find Azure templates, starter kits, or reference architectures. Parameters: searchTerm",
        "icon": "$(search)",
        "tags": ["azure", "templates", "spec2cloud", "starter", "architecture"],
        "inputSchema": {
          "type": "object",
          "properties": {
            "searchTerm": {
              "type": "string",
              "description": "Search term to filter templates by title, description, tags, services, languages, or frameworks"
            }
          }
        }
      },
      {
          "name": "searchTemplates",
          "tags": ["azure", "templates", "spec2cloud", "starter", "architecture"],
          "toolReferenceName": "searchTemplates",
          "displayName": "Search Spec2Cloud Templates",
          "modelDescription": "Retrieve Spec2Cloud templates based on search criteria.",
          "userDescription": "Retrieve the list of Spec2Cloud templates based on search criteria.",
          "canBeReferencedInPrompt": true,
          "icon": "$(files)",
          "inputSchema": {
            "type": "object",
            "properties": {
              "searchTerm": {
                "type": "string",
                "description": "Search term to filter templates by title, description, tags, services, languages, or frameworks"
              }
            }
          }
      },
      {
          "name": "costEstimator",
          "tags": ["azure", "templates", "spec2cloud", "starter", "architecture"],
          "toolReferenceName": "costEstimator",
          "displayName": "Cost Estimator",
          "modelDescription": "Estimate the Azure cost for the Spec architecture.",
          "userDescription": "Estimate the cost of Azure resources for the Spec architecture.",
          "canBeReferencedInPrompt": true,
          "icon": "$(files)",
          "inputSchema": {
            "type": "object",
            "properties": {
              "serviceName": {
                "type": "string",
                "description": "Name of the Azure service to estimate cost for"
              },
              "currencyCode": {
                "type": "string",
                "description": "Currency code to use for cost estimation"
              },
              "priceType": {
                "type": "string",
                "description": "Price type to use for cost estimation (e.g. Consumption)"
              },
              "armRegionName": {
                "type": "string",
                "description": "ARM region name to use for cost estimation (e.g. eastus)"
              },
              "sku": {
                "type": "string",
                "description": "ARM SKU name to use for cost estimation (e.g. Standard_D2s_v3)"
              }
            }
          }
      }      
    ],
    "chatParticipants": [
      {
        "id": "spec2cloud.chat",
        "name": "spec2cloud",
        "description": "Find and explore Azure Spec2Cloud templates",
        "isSticky": true,
        "commands": [
          {
            "name": "find",
            "description": "Find templates based on criteria"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "spec2cloud.openGallery",
        "title": "Open Template Gallery",
        "category": "Spec2Cloud"
      },
      {
        "command": "spec2cloud.refreshTemplates",
        "title": "Refresh Templates",
        "category": "Spec2Cloud",
        "icon": "$(refresh)"
      },
      {
        "command": "spec2cloud.searchTemplates",
        "title": "Search Templates",
        "category": "Spec2Cloud",
        "icon": "$(search)"
      },
      {
        "command": "spec2cloud.sortTemplatesByName",
        "title": "Sort by Name",
        "category": "Spec2Cloud",
        "icon": "$(symbol-text)"
      },
      {
        "command": "spec2cloud.sortTemplatesByDate",
        "title": "Sort by Date",
        "category": "Spec2Cloud",
        "icon": "$(calendar)"
      },
      {
        "command": "spec2cloud.viewTemplateOnGitHub",
        "title": "View on GitHub",
        "category": "Spec2Cloud",
        "icon": "$(github)"
      },
      {
        "command": "spec2cloud.viewTemplateInGallery",
        "title": "View Template",
        "category": "Spec2Cloud",
        "icon": "$(eye)"
      },
      {
        "command": "spec2cloud.cloneTemplate",
        "title": "Clone Template",
        "category": "Spec2Cloud",
        "icon": "$(cloud-download)"
      },
      {
        "command": "spec2cloud.openResource",
        "title": "Open Resource",
        "category": "Spec2Cloud"
      },
      {
        "command": "spec2cloud.checkTools",
        "title": "Check MCP Tools Registration",
        "category": "Spec2Cloud"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "spec2cloud.refreshTemplates",
          "when": "view == spec2cloud.templates",
          "group": "navigation@1"
        },
        {
          "command": "spec2cloud.searchTemplates",
          "when": "view == spec2cloud.templates",
          "group": "navigation@2"
        },
        {
          "command": "spec2cloud.sortTemplatesByName",
          "when": "view == spec2cloud.templates",
          "group": "navigation@3"
        },
        {
          "command": "spec2cloud.sortTemplatesByDate",
          "when": "view == spec2cloud.templates",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "spec2cloud.viewTemplateOnGitHub",
          "when": "view == spec2cloud.templates && viewItem == template",
          "group": "inline@1"
        },
        {
          "command": "spec2cloud.viewTemplateInGallery",
          "when": "view == spec2cloud.templates && viewItem == template",
          "group": "inline@2"
        },
        {
          "command": "spec2cloud.cloneTemplate",
          "when": "view == spec2cloud.templates && viewItem == template",
          "group": "inline@3"
        },
        {
          "command": "spec2cloud.viewTemplateOnGitHub",
          "when": "view == spec2cloud.templates && viewItem == template",
          "group": "1_actions@1"
        },
        {
          "command": "spec2cloud.viewTemplateInGallery",
          "when": "view == spec2cloud.templates && viewItem == template",
          "group": "1_actions@2"
        },
        {
          "command": "spec2cloud.cloneTemplate",
          "when": "view == spec2cloud.templates && viewItem == template",
          "group": "1_actions@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "@modelcontextprotocol/sdk": "^1.0.0"
  }
}
